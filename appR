## app.R ##

library(shiny)
library(shinydashboard)
library (DT)
library (ggplot2)


header<- dashboardHeader(
  title="Hypertension Monitoring System",
  titleWidth = "40%"
)

## Sidebar content
Sidebar<-dashboardSidebar(  )


## Body content
body<-dashboardBody(
  
  fluidRow(
    
    box(fileInput("file1", "Choose patient data",
                  accept = c(
                    "text/csv",
                    "text/comma-separated-values,text/plain",
                    ".csv")
    )
    
    ),
    
    box(plotOutput("plot1"), collapsible=TRUE, collapsed = TRUE
    )
    
  ),
  
  box(DTOutput("dati"), collapsible=TRUE, title = "Data"
  )
  
  )





ui <- dashboardPage(
  header,
  Sidebar,
  body
)
